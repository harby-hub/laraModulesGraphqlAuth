{
    "name": "harby/laramodulesgraphql",
    "type": "project",
    "description": "The skeleton application for the Laravel framework with modules Structurel.",
    "keywords": [ "laravel" , "framework" , "modules" ],
    "license": "MIT",
    "require": {
        "php": "*",
        "guzzlehttp/guzzle": "^7.7",
        "laravel/framework": "^10.17",
        "laravel/passport": "^11.8",
        "laravel/tinker": "^2.8",
        "nuwave/lighthouse": "^6.16",
        "nwidart/laravel-modules": "^10.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Modules\\": "Modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test"           : [ "clear" , "@artisan optimize:clear" , "@database" , "@phpunit" ],
        "artisan"        : "@php artisan",
        "phpunit"        : "@artisan test",
        "database"       : [
            "@artisan migrate:fresh",
            "@passport"
        ],
        "passport"        : [
            "@artisan passport:client --password --name Laravel-Password-Grant-Client-Client --provider Client" ,
            "@artisan passport:client --password --name Laravel-Password-Grant-Client-Staff --provider Staff" ,
            "@artisan passport:client --password --name Laravel-Password-Grant-Client-Delegate --provider Delegate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
